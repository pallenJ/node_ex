
<form action="/articles/<%=article_data.id%>" method="patch">

    <div class="modal-header">
        <p class="modal-title h5" id="title"><b style="color: brown;">[<%=article_data.board %>]</b> 
        <%=article_data.title %> &nbsp;&nbsp;&nbsp;
        
    </p>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    
    <div class="form-group">
        <p class="small text-primary">writer: <%=article_data.user.nick %></p>
        <div align = 'right' id ='edit_btn'> <a class="btn btn-outline-dark btn-sm">edit</a> </div>
        <textarea class="form-control" readonly> <%=article_data.content %></textarea><br>      
        <small class="text-secondary"> 작성일: <%=article_data.createdAt %></small><br>
        <small class="text-secondary"> 수정일: <%=article_data.updatedAt %> </small>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-Close" id='save_btn' hidden>Save changes</button>
</div>
</form>
    